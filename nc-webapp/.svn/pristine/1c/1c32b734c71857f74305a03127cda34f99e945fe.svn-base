@charset "utf-8";
/* CSS Document */

/* zero the margin and padding of the body element to account for differing browser defaults */
body {
    margin: 0; padding: 0; /* zero init values */
    text-align: left; font-family: Arial, Helvetica, sans-serif; font-size: 0.9em; /* font vars */
    background-color: #3D4A57; /* set background color*/
    height:100%; /* set default height for body, used by container */
}


#container {width:900px; margin:auto; background-color:#fff;min-height:100%;height:100%;padding:2px;}
/* contains header and global */
#container_header {border:0;margin:0;background:#fff;} /* set border and margin to zero */

#header_logo{float:left;padding:1em;} /** IE6 **/
#header_toolbar {float:right;text-align:right;padding:0.5em;}  /** IE6 **/
#global {width:100%;height:40px;margin-bottom:1em;background-image:url("../images/gradient.gif");background-repeat:repeat-x;}/* you must have a height to see image on all browsers */
#secondary{padding:0;margin:0;height:auto;text-align:left;}


#container_content{text-align:left;width:100%;}
#container_footer{text-align:left;font-size:0.7em;border-top:solid 2px #CCC;padding:1em;margin-top:1em;}
#content {background:#fff;}
#footer {}
/* this class should be placed on a div or break element and should be the final element before the close of a container that should fully contain a float */
.clear{
    clear:both;
    font-size:0;
    height:1px;
    line-height:0;
    margin:0 0 -1px;
    padding:0;
}

